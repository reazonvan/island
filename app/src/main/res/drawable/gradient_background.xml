<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Базовый градиентный фон -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/md_primary"
                android:centerColor="@color/md_primary_light"
                android:endColor="@color/md_secondary"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Световые блики -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:gradientRadius="500dp"
                android:type="radial"
                android:centerX="0.2"
                android:centerY="0.2" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#22FFFFFF"
                android:endColor="#00FFFFFF"
                android:gradientRadius="400dp"
                android:type="radial"
                android:centerX="0.8"
                android:centerY="0.8" />
        </shape>
    </item>
</layer-list> 