<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.Islandd" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/md_primary_light</item>
        <item name="colorPrimaryDark">@color/md_primary</item>
        <item name="colorPrimaryVariant">@color/md_primary</item>
        <item name="colorOnPrimary">@color/md_text_light</item>
        
        <!-- Вторичные цвета -->
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorSecondaryVariant">@color/md_secondary_light</item>
        <item name="colorOnSecondary">@color/md_text_light</item>
        
        <!-- Акцентный цвет -->
        <item name="colorAccent">@color/md_secondary</item>
        
        <!-- Статус-бар и системная навигация -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Фон и анимации -->
        <item name="android:windowBackground">@color/md_background_dark</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
        
        <!-- Шрифты -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        
        <!-- Другие атрибуты -->
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="materialCardViewStyle">@style/CardStyle</item>
        <item name="android:textViewStyle">@style/TextViewContentStyle</item>
    </style>

    <style name="Theme.Islandd" parent="Base.Theme.Islandd" />
</resources> 